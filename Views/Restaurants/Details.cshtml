@model RestaurantReviewer.Models.Restaurant

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            Has Fast Food
        </dt>
            @if (Model.IsFast == 1)
                {
                <dd class="col-sm-10">
                    Yes
                </dd>
                }
                else
                {
                 <dd class="col-sm-10">
                    No
                </dd>
                }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfStores)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumberOfStores)
            </dd>
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
      |  
    <a asp-controller="Reviews" asp-action="Index" asp-route-id="@Model">View Details</a>

</div>
